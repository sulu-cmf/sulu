<?xml version="1.0" ?>

<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>complex</key>

    <view>ClientWebsiteBundle:Website:complex.html.twig</view>
    <controller>SuluWebsiteBundle:Default:index</controller>
    <cacheLifetime>4800</cacheLifetime>

    <properties>
        <property name="title" title="properties.title" type="text_line" mandatory="true">
            <tag name="sulu.node.name" />
            <tag name="sulu.node.title" priority="10" />
        </property>
        <property name="url" title="properties.url" type="resource_locator" mandatory="true">
            <tag name="sulu.rlp.part" priority="1" />
        </property>
        <property name="article" type="text_editor" mandatory="true"/>
        <block name="block1" title="properties.block1" minOccurs="2" maxOccurs="10" mandatory="true">
            <tag name="sulu.node.block" priority="20" />
            <tag name="sulu.test.block" priority="1" />
            <properties>
                <property name="title1.1" type="text_line" mandatory="true"/>
                <property name="article1.1" type="text_area" mandatory="true" minOccurs="2"/>
                <block name="block1.1">
                    <properties>
                        <block name="block1.1.1">
                            <properties>
                                <property name="article1.1.1" title="properties.title1" type="text_area" mandatory="true" minOccurs="2">
                                    <tag name="sulu.node.title" priority="5" />
                                </property>
                                <property name="article2.1.2" type="text_area" mandatory="true" minOccurs="2"/>
                                <block name="block1.1.3">
                                    <properties>
                                        <property name="article1.1.3.1" type="text_area" mandatory="true"
                                                  minOccurs="2"/>
                                    </properties>
                                </block>
                            </properties>
                        </block>
                        <block name="block1.1.2">
                            <properties>
                                <property name="article1.1.2.1" type="text_area" mandatory="true" minOccurs="2"/>
                            </properties>
                        </block>
                    </properties>
                </block>
            </properties>
        </block>
        <property name="blog" type="text_editor" mandatory="true"/>
    </properties>
</template>
