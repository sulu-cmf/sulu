<?xml version="1.0" encoding="utf-8"?>
<workspace xmlns="http://schemas.sulu.io/workspace/workspace"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://schemas.sulu.io/workspace/workspace http://schemas.sulu.io/workspace/workspace-1.0.xsd">

    <name>Massive Art</name>
    <key>massiveart</key>

    <localizations>
        <localization language="en" country="us" shadow="auto">
            <localization language="en" country="ca"/>
        </localization>
        <localization language="fr" country="ca"/>
        <localization language="de"/>
    </localizations>

    <segments>
        <segment key="w">winter</segment>
        <segment key="s">summer</segment>
    </segments>

    <theme>
        <key>massiveart</key>
        <excluded>
            <template>overview</template>
        </excluded>
    </theme>

    <portals>
        <portal>
            <name>Massive Art US</name>
            <key>massiveart_us</key>
            <resource-locator>
                <strategy>tree</strategy>
            </resource-locator>

            <localizations>
                <localization language="en" country="us"/>
                <localization language="de" />
            </localizations>

            <environments>
                <environment type="prod">
                    <urls>
                        <url>{language}.massiveart.{country}/{segment}</url>
                        <url>www.massiveart.com</url>
                    </urls>
                </environment>
                <environment type="dev">
                    <urls>
                        <url>massiveart.lo/{localization}/{segment}</url>
                    </urls>
                </environment>
            </environments>
        </portal>
        <portal>
            <name>Massive Art CA</name>
            <key>massiveart_ca</key>
            <resource-locator>
                <strategy>tree</strategy>
            </resource-locator>

            <localizations>
                <localization language="en" country="ca"/>
                <localization language="fr" country="ca"/>
            </localizations>

            <environments>
                <environment type="prod">
                    <urls>
                        <url>{language}.massiveart.{country}/{segment}</url>
                        <url language="en" country="ca" segment="s">www.massiveart.com</url>
                    </urls>
                </environment>
                <environment type="dev">
                    <urls>
                        <url>massiveart.lo/{localization}/{segment}</url>
                    </urls>
                </environment>
            </environments>
        </portal>
    </portals>
</workspace>
