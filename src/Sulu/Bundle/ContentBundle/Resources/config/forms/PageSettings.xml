<?xml version="1.0" ?>
<form xmlns="http://schemas.sulu.io/template/template"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/form-1.0.xsd">
    <schema>
        <allOf>
            <schema>
                <anyOf>
                    <schema>
                        <properties>
                            <property name="nodeType" value="1" />
                        </properties>
                    </schema>
                    <schema>
                        <properties>
                            <property name="nodeType" value="2" />
                            <property name="title" mandatory="true" />
                            <property name="internal_link" mandatory="true" />
                        </properties>
                    </schema>
                    <schema>
                        <properties>
                            <property name="nodeType" value="4" />
                            <property name="title" mandatory="true" />
                            <property name="external" mandatory="true" />
                        </properties>
                    </schema>
                </anyOf>
            </schema>
            <schema>
                <anyOf>
                    <schema>
                        <properties>
                            <property name="shadowOn" value="true" />
                            <property name="shadowBaseLanguage" mandatory="true" />
                        </properties>
                    </schema>
                    <schema>
                        <properties>
                            <property name="shadowOn" value="false" />
                        </properties>
                    </schema>
                </anyOf>
            </schema>
        </allOf>
    </schema>
    <properties>
        <property
            name="navContexts"
            type="page_settings_navigation_select"
            colspan="6"
            visibleCondition="shadowOn == false"
        >
            <meta>
                <title lang="en">Show page in</title>
                <title lang="de">Zeige Seite in</title>
            </meta>
        </property>
        <section name="pageType" visibleCondition="shadowOn == false">
            <meta>
                <title lang="en">Page Type</title>
                <title lang="de">Inhaltstyp</title>
            </meta>
            <properties>
                <property name="nodeType" type="single_select" mandatory="true" colspan="6">
                    <meta>
                        <title lang="en">Page Type</title>
                        <title lang="de">Inhaltstyp</title>
                    </meta>
                    <params>
                        <param name="default_value" value="1"/>
                        <param name="values" type="collection">
                            <param name="1" value="1">
                                <meta>
                                    <title lang="en">Content</title>
                                    <title lang="de">Inhalt</title>
                                </meta>
                            </param>
                            <param name="2" value="2">
                                <meta>
                                    <title lang="en">Internal Link</title>
                                    <title lang="de">Interner Link</title>
                                </meta>
                            </param>
                            <param name="4" value="4">
                                <meta>
                                    <title lang="en">External Link</title>
                                    <title lang="de">Externer Link</title>
                                </meta>
                            </param>
                        </param>
                    </params>
                </property>
                <property name="title" type="text_line" visibleCondition="nodeType != 1">
                    <meta>
                        <title lang="en">Link title</title>
                        <title lang="de">Link Titel</title>
                    </meta>
                </property>
                <property name="internal_link" type="single_internal_link" visibleCondition="nodeType == 2">
                    <meta>
                        <title lang="en">Linked Content</title>
                        <title lang="de">Verlinkter Inhalt</title>
                    </meta>
                </property>
                <property name="external" type="url" visibleCondition="nodeType == 4">
                    <meta>
                        <title lang="en">URL</title>
                        <title lang="de">URL</title>
                    </meta>
                </property>
            </properties>
        </section>
        <section name="shadowPage">
            <meta>
                <title lang="en">Shadow Page</title>
                <title lang="de">Shadow Seite</title>
            </meta>
            <properties>
                <property name="shadowOn" type="checkbox" disabledCondition="__locale in shadowLocales|values">
                    <meta>
                        <title lang="en">Enable Shadow Page</title>
                        <title lang="de">Shadow Seite aktivieren</title>
                        <info_text lang="de">Diese Funktion ist deaktiviert, wenn die aktuelle Sprache bereits als Shadow Sprache verwendet wird.</info_text>
                        <info_text lang="en">This function is disabled if the current locale is already used as shadow locale.</info_text>
                    </meta>
                    <params>
                        <param name="type" value="toggler" />
                    </params>
                </property>
                <property
                    name="shadowBaseLanguage"
                    type="page_settings_shadow_locale_select"
                    visibleCondition="shadowOn == true"
                    colspan="6"
                >
                    <meta>
                        <title lang="en">Shadow Locale</title>
                        <title lang="de">Shadow Sprache</title>
                    </meta>
                </property>
            </properties>
        </section>
        <section name="changelog">
            <meta>
                <title lang="en">Editing information</title>
                <title lang="de">Bearbeitungsinformationen</title>
            </meta>
            <properties>
                <property name="authored" type="datetime" colspan="6">
                    <meta>
                        <title lang="en">Authored Date</title>
                        <title lang="de">Verfasst am</title>
                    </meta>
                </property>
                <property name="author" type="single_contact_selection" colspan="6">
                    <meta>
                        <title lang="en">Author</title>
                        <title lang="de">Autor</title>
                    </meta>
                </property>
                <property name="changelog" type="changelog_line">
                    <meta>
                        <title lang="en">Changelog</title>
                        <title lang="de">Ã„nderungshistorie</title>
                    </meta>
                </property>
            </properties>
        </section>
    </properties>
</form>
