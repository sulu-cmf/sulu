<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="sulu_content.reference_store.content"
                 class="Sulu\Bundle\ContentBundle\ReferenceStore\ReferenceStore">
            <tag name="sulu_content.reference_store" alias="content"/>
        </service>

        <service id="sulu_content.reference_store_pool"
                 class="Sulu\Bundle\ContentBundle\ReferenceStore\ReferenceStorePool">
            <argument type="collection"/>
        </service>
    </services>
</container>
