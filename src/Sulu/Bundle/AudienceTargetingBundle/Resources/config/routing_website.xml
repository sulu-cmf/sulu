<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        http://symfony.com/schema/routing/routing-1.0.xsd">
    <route id="sulu_audience_targeting.target_group" path="%sulu_audience_targeting.url%">
        <default key="_controller">sulu_audience_targeting.target_group_evaluation_controller:targetGroupAction</default>
    </route>
    <route id="sulu_audience_targeting.target_group_hit" path="%sulu_audience_targeting.hit.url%">
        <default key="_controller">sulu_audience_targeting.target_group_evaluation_controller:targetGroupHitAction</default>
    </route>
</routes>
