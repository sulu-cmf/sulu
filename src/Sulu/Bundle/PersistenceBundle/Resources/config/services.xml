<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sulu_persistence.repository_factory.class">Sulu\Bundle\PersistenceBundle\Repository\RepositoryFactory</parameter>
    </parameters>

    <services>
        <service id="sulu_persistence.repository_factory" class="%sulu_persistence.repository_factory.class%">
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>
    </services>

</container>
