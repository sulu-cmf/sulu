<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="sulu_core.workspace.request_analyzer.class">Sulu\Component\Workspace\Analyzer\RequestAnalyzer</parameter>
        <parameter key="sulu_core.workspace.workspace_manager.class">Sulu\Component\Workspace\Manager\WorkspaceManager</parameter>
        <parameter key="sulu_core.workspace.loader.xml_class">Sulu\Component\Workspace\Loader\XmlFileLoader</parameter>
        <parameter key="sulu_core.workspace.request_listener.class">Sulu\Component\Workspace\EventListener\RequestListener</parameter>

        <parameter key="sulu_core.workspace.config_dir">%kernel.root_dir%/../Resources/workspaces</parameter>
        <parameter key="sulu_core.workspace.cache_class">WorkspaceCollectionCache</parameter>
        <parameter key="sulu_core.workspace.base_class">WorkspaceCollection</parameter>
    </parameters>

    <services>
        <service id="sulu_core.workspace.loader.xml" class="%sulu_core.workspace.loader.xml_class%">
            <argument type="service" id="file_locator"/>
        </service>
        <service id="sulu_core.workspace.workspace_manager" class="%sulu_core.workspace.workspace_manager.class%">
            <!-- TODO use delegating loader -->
            <argument type="service" id="sulu_core.workspace.loader.xml"/>
            <argument type="service" id="logger"/>
            <argument type="collection">
                <argument key="config_dir">%sulu_core.workspace.config_dir%</argument>
                <argument key="cache_dir">%kernel.cache_dir%</argument>
                <argument key="debug">%kernel.debug%</argument>
                <argument key="cache_class">%sulu_core.workspace.cache_class%</argument>
                <argument key="base_class">%sulu_core.workspace.base_class%</argument>
            </argument>
        </service>
        <service id="sulu_core.workspace.request_analyzer" class="%sulu_core.workspace.request_analyzer.class%">
            <argument type="service" id="sulu_core.workspace.workspace_manager"/>
            <argument>%kernel.environment%</argument>
        </service>
        <service id="sulu_core.workspace.request_listener" class="%sulu_core.workspace.request_listener.class%">
            <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" priority="300"/>
            <argument type="service" id="sulu_core.workspace.request_analyzer"/>
        </service>
    </services>
</container>
