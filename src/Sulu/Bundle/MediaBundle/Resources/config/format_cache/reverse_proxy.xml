<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="sulu_media.format_cache.reverse_proxy.class">Sulu\Bundle\MediaBundle\Media\FormatCache\ReverseProxyFormatCache</parameter>
    </parameters>
    <services>
        <service id="sulu_media.format_cache.reverse_proxy" class="%sulu_media.format_cache.reverse_proxy.class%">
            <argument type="service" id="filesystem"/>
            <argument>%sulu_media.format_cache.path%</argument>
            <argument type="expression">service('router').getRouteCollection().get('sulu_media.website.image.proxy').getPath()</argument>
            <argument>%sulu_media.format_cache.segments%</argument>
            <argument>%sulu_media.image.formats%</argument>
        </service>
        <service id="sulu_media.format_cache" alias="sulu_media.format_cache.reverse_proxy" />
    </services>
</container>
