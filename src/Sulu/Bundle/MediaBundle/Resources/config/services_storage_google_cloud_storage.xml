<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="sulu_media.storage.google_cloud_storage.client" class="Google\Cloud\Storage\StorageClient">
            <argument type="collection">
                <argument key="keyFilePath">%sulu_media.media.storage.google_cloud_storage.key_file_path%</argument>
            </argument>
        </service>

        <service id="sulu_media.storage.google_cloud_storage.bucket" class="Google\Cloud\Storage\Bucket">
            <factory service="sulu_media.storage.google_cloud_storage.client" method="bucket"/>

            <argument type="string">%sulu_media.media.storage.google_cloud_storage.bucket%</argument>
        </service>

        <service id="sulu_media.storage.google_cloud_storage.adapter"
                 class="Superbalist\Flysystem\GoogleStorage\GoogleStorageAdapter">
            <argument type="service" id="sulu_media.storage.google_cloud_storage.client"/>
            <argument type="service" id="sulu_media.storage.google_cloud_storage.bucket"/>
        </service>

        <service id="sulu_media.storage.google_cloud_storage.filesystem" class="League\Flysystem\Filesystem">
            <argument type="service" id="sulu_media.storage.google_cloud_storage.adapter"/>
        </service>

        <service id="sulu_media.storage.google_cloud_storage"
                 class="Sulu\Bundle\MediaBundle\Media\Storage\GoogleCloudStorage">
            <argument type="service" id="sulu_media.storage.google_cloud_storage.filesystem"/>
            <argument>%sulu_media.media.storage.google_cloud_storage.segments%</argument>
        </service>
    </services>
</container>
