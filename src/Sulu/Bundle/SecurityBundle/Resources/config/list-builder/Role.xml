<class
    xmlns="http://schemas.sulu.io/class/general"
    xmlns:list="http://schemas.sulu.io/class/list"
    xmlns:orm="http://schemas.sulu.io/class/doctrine"
>
    <properties>
        <property
            name="id"
            visibility="no"
            searchability="yes"
            list:translation="sulu_admin.id"
        >
            <orm:field-name>id</orm:field-name>
            <orm:entity-name>%sulu.model.role.class%</orm:entity-name>
        </property>

        <property
            name="name"
            visibility="always"
            searchability="yes"
            list:translation="sulu_admin.name"
        >
            <orm:field-name>name</orm:field-name>
            <orm:entity-name>%sulu.model.role.class%</orm:entity-name>
        </property>

        <property
            name="system"
            visibility="always"
            searchability="yes"
            list:translation="sulu_security.system"
        >
            <orm:field-name>system</orm:field-name>
            <orm:entity-name>%sulu.model.role.class%</orm:entity-name>
        </property>

        <property
            name="created"
            visibility="yes"
            list:translation="sulu_admin.created"
        >
            <orm:field-name>created</orm:field-name>
            <orm:entity-name>%sulu.model.role.class%</orm:entity-name>
        </property>

        <property
            name="changed"
            visibility="no"
            list:type="datetime"
            list:translation="sulu_admin.changed"
        >
            <orm:field-name>changed</orm:field-name>
            <orm:entity-name>%sulu.model.role.class%</orm:entity-name>
        </property>
    </properties>
</class>
