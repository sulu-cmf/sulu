<?xml version="1.0" ?>
<form xmlns="http://schemas.sulu.io/template/template"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/form-1.0.xsd"
>
    <key>page_excerpt</key>

    <properties>
        <property name="ext/excerpt/title" type="text_line">
            <meta>
                <title>sulu_admin.title</title>
            </meta>
        </property>
        <property name="ext/excerpt/more" type="text_line">
            <meta>
                <title>sulu_page.text_for_more_link</title>
            </meta>
        </property>
        <property name="ext/excerpt/description" type="text_editor">
            <meta>
                <title>sulu_admin.description</title>
            </meta>
        </property>
        <property name="ext/excerpt/categories" type="category_selection">
            <meta>
                <title>sulu_category.categories</title>
            </meta>
        </property>
        <property name="ext/excerpt/audience_targeting_groups" type="target_group_selection" onInvalid="ignore">
            <meta>
                <title>sulu_audience_targeting.target_groups</title>
            </meta>
        </property>
        <property name="ext/excerpt/tags" type="tag_selection">
            <meta>
                <title>sulu_tag.tags</title>
            </meta>
        </property>
        <property
            name="ext/excerpt/segment" type="single_select"
            visibleCondition="__webspace.segments.length &gt; 0"
        >
            <meta>
                <title>sulu_admin.segments</title>
            </meta>
            <params>
                <param
                    name="values"
                    type="expression"
                    value="service('sulu_page.segment_select_helper').getValues(webspace)"
                />
            </params>
        </property>
        <property name="ext/excerpt/icon" type="media_selection">
            <meta>
                <title>sulu_page.icons</title>
            </meta>
        </property>
        <property name="ext/excerpt/images" type="media_selection">
            <meta>
                <title>sulu_page.images</title>
            </meta>
        </property>
    </properties>
</form>
