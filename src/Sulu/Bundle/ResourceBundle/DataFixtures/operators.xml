<operators>
    <!-- number -->
    <operator type="number" inputType="" operator="gt">
        <translations>
            <translation locale="de">größer als</translation>
            <translation locale="en">greater than</translation>
        </translations>
    </operator>
    <operator type="number" inputType="" operator="lt">
        <translations>
            <translation locale="de">kleiner als</translation>
            <translation locale="en">less than</translation>
        </translations>
    </operator>
    <operator type="number" inputType="" operator="lte">
        <translations>
            <translation locale="de">kleiner gleich</translation>
            <translation locale="en">less than or equal</translation>
        </translations>
    </operator>
    <operator type="number" inputType="" operator="gte">
        <translations>
            <translation locale="de">größer gleich</translation>
            <translation locale="en">greater than or equal</translation>
        </translations>
    </operator>
    <operator type="number" inputType="" operator="=">
        <translations>
            <translation locale="de">gleich</translation>
            <translation locale="en">is</translation>
        </translations>
    </operator>
    <operator type="number" inputType="" operator="!=">
        <translations>
            <translation locale="de">ungleich</translation>
            <translation locale="en">is not</translation>
        </translations>
    </operator>

    <!-- string -->
    <operator type="string" inputType="" operator="LIKE">
        <translations>
            <translation locale="de">gleich</translation>
            <translation locale="en">is</translation>
        </translations>
    </operator>
    <operator type="string" inputType="" operator="NOT LIKE">
        <translations>
            <translation locale="de">ungleich</translation>
            <translation locale="en">is not</translation>
        </translations>
    </operator>

    <!-- boolean -->
    <operator type="boolean" inputType="select" operator="IS">
        <translations>
            <translation locale="de">ist</translation>
            <translation locale="en">is</translation>
        </translations>
        <values>
            <value value="true">
                <translations>
                    <translation locale="de">wahr</translation>
                    <translation locale="en">true</translation>
                </translations>
            </value>
            <value value="false">
                <translations>
                    <translation locale="de">falsch</translation>
                    <translation locale="en">false</translation>
                </translations>
            </value>
        </values>
    </operator>

    <!-- date -->
    <operator type="date" inputType="datepicker" operator="gt">
        <translations>
            <translation locale="de">größer als</translation>
            <translation locale="en">greater than</translation>
        </translations>
    </operator>
    <operator type="date" inputType="datepicker" operator="lt">
        <translations>
            <translation locale="de">kleiner als</translation>
            <translation locale="en">less than</translation>
        </translations>
    </operator>
    <operator type="date" inputType="datepicker" operator="lte">
        <translations>
            <translation locale="de">kleiner gleich</translation>
            <translation locale="en">less than or equal</translation>
        </translations>
    </operator>
    <operator type="date" inputType="datepicker" operator="gte">
        <translations>
            <translation locale="de">größer gleich</translation>
            <translation locale="en">greater than or equal</translation>
        </translations>
    </operator>
    <operator type="date" inputType="datepicker" operator="is">
        <translations>
            <translation locale="de">gleich</translation>
            <translation locale="en">is</translation>
        </translations>
    </operator>
    <operator type="date" inputType="datepicker" operator="not">
        <translations>
            <translation locale="de">ungleich</translation>
            <translation locale="en">is not</translation>
        </translations>
    </operator>
    <operator type="date" inputType="select" operator="within">
        <translations>
            <translation locale="de">in</translation>
            <translation locale="en">within</translation>
        </translations>
        <values>
            <value value="-1 week">
                <translations>
                    <translation locale="de">letzter Woche</translation>
                    <translation locale="en">last week</translation>
                </translations>
            </value>
            <value value="-1 month">
                <translations>
                    <translation locale="de">letztem Monat</translation>
                    <translation locale="en">last month</translation>
                </translations>
            </value>
        </values>
    </operator>
</operators>
