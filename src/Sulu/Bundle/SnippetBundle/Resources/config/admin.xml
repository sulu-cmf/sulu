<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="sulu_snippet.admin" class="Sulu\Bundle\SnippetBundle\Admin\SnippetAdmin">
            <argument type="service" id="Sulu\Bundle\AdminBundle\Admin\Routing\RouteBuilderFactoryInterface"/>
            <argument type="service" id="sulu_security.security_checker"/>
            <argument type="service" id="sulu_core.webspace.webspace_manager"/>
            <argument>%sulu_snippet.content-type.default_enabled%</argument>

            <tag name="sulu.admin"/>
            <tag name="sulu.context" context="admin"/>
        </service>

        <!-- JsConfig -->
         <service id="sulu_snippet.jsconfig" class="Sulu\Bundle\AdminBundle\Admin\JsConfig">
             <argument type="string">sulu-snippet</argument>
             <argument type="collection">
                 <argument key="defaultType" type="string">%sulu.content.structure.default_type.snippet%</argument>
             </argument>

             <tag name="sulu.js_config"/>
        </service>
    </services>
</container>
